<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="#FF3F51B5"
    tools:context="com.example.jacksonmeyer.dailybread.MainActivity">

    <TextView
        android:text="If you really want to catch your dream you will have to chase it!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:id="@+id/quoteTextView"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/heading"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="More Inspiration!!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:layout_marginBottom="103dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:id="@+id/showQuoteButton"
        android:textColor="#FF3F51B5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Live a BOLD life today!"
        android:textColor="#77ffff"
        android:textSize="32dp"
        android:id="@+id/heading"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
